@inherits BaseComponent
@using  Client.Pages
@using  static Shared.Services.BuyAnthemGoldConstants

<div id="@Id" class="dropdown d-block">
  <button class="btn btn-secondary" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <span style="font-size:xx-large" class="oi oi-person" aria-hidden="true"></span>
  </button>

  <h6>@EdgeAccountState.Username</h6>
  <div class="dropdown-menu dropleft" aria-labelledby="dropdownMenuButton">
    <NavLink class="nav-link nav-item" href="@ChangePasswordBase.Route">
      <span class="oi oi-bolt" aria-hidden="true"></span> Change Password
    </NavLink>
    <NavLink class="nav-link nav-item" href="@ChangePinBase.Route">
      <span class="oi oi-bolt" aria-hidden="true"></span> Change Pin
    </NavLink>
    <NavLink class="nav-link nav-item" href="@LogoutPageBase.Route">
      <span class="oi oi-account-logout" aria-hidden="true"></span> Logout
    </NavLink>
    <NavLink class="nav-link nav-item" href="@MyAccountUrl" target="blank">
      <span class="oi oi-person" aria-hidden="true"></span> My Account
    </NavLink>
    <NavLink class="nav-link nav-item" href="@MyLedgerUrl" target="blank">
      <span class="oi oi-book" aria-hidden="true"></span> My Ledger
    </NavLink>
    <NavLink class="nav-link nav-item" href="@BunkerAssetsUrl" target="blank">
      <span class="oi oi oi-layers" aria-hidden="true"></span> Bunker Assests
    </NavLink>
    <NavLink class="nav-link nav-item" href="@BuyGoldUrl" target="blank">
      <span class="oi oi-cart" aria-hidden="true"></span> Buy Gold
    </NavLink>
  </div>
</div>


<style>
  #@Id  {
    font-size: 1em;
    font-weight: bold;
  }

  #@Id h6{
    text-transform: uppercase;
    font-weight: bold;
  }

  #@Id span{
    font-size: small;
  }

  @@media (max-width:425px){
    #@Id  h6 {
      font-size: .7rem;
    }
  }

</style>